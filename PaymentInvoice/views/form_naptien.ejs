<div class="content-center-div">
    <form class="form-login" action="/pay" method="POST">
        <div class="form-group">
            <div class="input-group">
                <input name="username" class="form-control" value="<%=tenHV%>" type="email"
                    style="margin-top: 50px;margin-left:130px;" readonly="true;">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <input name="gmailtk" class="form-control" placeholder="Email" value="<%=username%>" type="email"
                    style="margin-left:130px;" readonly="true;">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group" style="margin-left:150px">
                <select name="money" class="form-control" style="width:325px;">
                    <option value="5">100.000 VNĐ</option>
                    <option value="10">200.000 VNĐ</option>
                    <option value="15">300.000 VNĐ</option>
                    <option value="20">400.000 VNĐ</option>
                    <option value="25">500.000 VNĐ</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="login-group form-inline">
                <input class="form-control" type="submit" value="Nạp Tiền" />
            </div>
        </div>
    </form>
</div>