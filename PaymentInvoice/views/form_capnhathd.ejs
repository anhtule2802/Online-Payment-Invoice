
<div class="content-center-div">
    <form id="upload" class="form-login" enctype="multipart/form-data" action="/uploadFileHoaDon" method="POST"
        style="padding-top: 50px;">
        <div class="form-group" style="text-align: -webkit-center;">
            <div class="input-group">
                <% if (resultUpload == null) { %>
                    <input id="myfile" class="form-control" type="file" name="myFileKH">
                    <% } else { %>
                        <input id="myfile" class="form-control" type="file" name="myFileKH">
                    <% if (resultUpload == true) { %>
                        <script type="text/javascript">
                            window.addEventListener('load', function () {
                                Swal.fire({
                                    type: 'success',
                                    title: 'Upload file thành công',
                                    text: ''
                                });
                            });
                        </script>
                    <% } else if (resultUpload == false) { %>
                        <script type="text/javascript">
                            window.addEventListener('load', function () {
                                Swal.fire({
                                    type: 'error',
                                    title: 'Phải chọn file excel',
                                    text: ''
                                });
                            });
                        </script>
                    <% } %>
                <% } %>
            </div>
        </div>
        <div class="form-group">
            <div class="login-group form-inline">
                <input class="form-control" type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        $("#upload").submit(function () {
            if ($('#myfile').val() === "") {
                Swal.fire({
                    type: 'error',
                    title: 'Chưa chọn file upload',
                    text: ''
                });
                return false;
            }
        });
    });
</script>